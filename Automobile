float p;
public:
void get2()
{
cout<<"\nEnter brand:";
cin>>b1;
cout<<"\nEnter Average:";
cin>>avg1;
cout<<"\nEnter Price:";
cin>>p;
cout<<"\nEnter engine capacity:";
cin>>ec;
}
void display2()
{
cout<<"\nDETAILS ARE:";
cout<<"\nBrand:"<<b1<<"\n";
cout<<"\nAverage:"<<avg1<<"\n";
cout<<"\nPrice:"<<p<<"\n";
cout<<"\nEngine capacity:"<<ec<<"\n";
}
};
class heavy:public am
{
char t1[20];
float p1;
public:
void get3()
{
cout<<"\nEnter type of vehicle:";
cin>>t1;
cout<<"\nEnter Price:";
cin>>p1;
cout<<"\nEnter engine capacity:";
cin>>ec;
}
void display3()
{
cout<<"\nDETAILS ARE:";
cout<<"\nType of vehicle:"<<t1<<"\n";
cout<<"\nPrice:"<<p1<<"\n";
cout<<"\nEngine capacity:"<<ec<<"\n";
}
};

void main()
{
clrscr();
cout<<"\nFor two wheeler:\n";
tw o1;
o1.get1();
