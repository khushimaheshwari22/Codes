#include<iostream.h>
#include<conio.h>
class am
{
protected:
float ec;
};
class tw:public am
{
char b[20];
float avg;
char t[20];
public:
void get1()
{
cout<<"\nEnter brand:";
cin>>b;
cout<<"\nEnter Average:";
cin>>avg;
cout<<"\nEnter type of vehicle:";
cin>>t;
cout<<"\nEnter engine capacity:";
cin>>ec;
}
void display1()
{
cout<<"\nDETAILS ARE:";
cout<<"\nBrand:"<<b<<"\n";
cout<<"\nAverage:"<<avg<<"\n";
cout<<"\nType:"<<t<<"\n";
cout<<"\nEngine capacity:"<<ec<<"\n";
}
};
class fw:public am
{
char b1[20];
